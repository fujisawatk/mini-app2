<div class="contents" >
  <div class="row">
    <div class="col s12 m6">
      <div class="card grey darken-3">
        <div class="card-content white-text">
          <span class="card-title"><%= @tweet.title %></span>
          <p><%= simple_format(@tweet.text) %></p>
        </div>
        <div class="card-action">
        <%= link_to 'Back', "/tweets", method: :get %>
          <%= link_to 'Edit', "/tweets/#{@tweet.id}/edit", method: :get %>
          <%= link_to 'Del', "/tweets/#{@tweet.id}", method: :delete %>
        </div>
      </div>
    </div>
  </div>
</div>