<!DOCTYPE html>
<html>
  <head>
    <title>FujI Brog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <div class="navbar-fixed">
      <nav>
        <div class="nav-wrapper">
          <a href="/tweets" class="brand-logo">FujI Blog</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li id="audio"><audio src="http://www.hmix.net/music/c/c7.mp3" controls></audio><li>
          <% if user_signed_in? %>
            <li><%= link_to "LogOut", destroy_user_session_path, method: :delete %></li>
            <li><a class="post" href="/tweets/new">New</a></li>
          <% else %>
            <li><%= link_to "LogIn", new_user_session_path, class: 'post' %></li>
            <li><%= link_to "SignIn", new_user_registration_path, class: 'post' %></li>
          <% end %>
          </ul>
        </div>
      </nav>
    </div>
    <%= yield %>
  </body>
</html>
